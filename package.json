{
  "name": "pushkar-pattiwar-portfolio",
  "version": "1.0.0",
  "description": "Modern, responsive portfolio website for Pushkar Pattiwar - Software Engineer specializing in AI & Web Development",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server . -p 3000 -o",
    "dev": "npx live-server --port=3000 --open=/",
    "build": "echo 'Static site - no build process needed'",
    "test": "npx playwright test",
    "lint": "npx eslint script.js",
    "format": "npx prettier --write *.html *.css *.js",
    "lighthouse": "npx lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html"
  },
  "keywords": [
    "portfolio",
    "website",
    "software-engineer",
    "ai",
    "machine-learning",
    "web-development",
    "responsive",
    "modern"
  ],
