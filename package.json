  "repository": {
    "type": "git",
    "url": "https://github.com/pushkarpattiwar/portfolio"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "eslint": "^8.50.0",
    "http-server": "^14.1.1",
    "lighthouse": "^11.0.0",
    "live-server": "^1.2.2",
    "prettier": "^3.0.0"
  },
  "browserslist": [
    "> 1%",
